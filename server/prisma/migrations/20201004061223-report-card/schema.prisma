datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Student {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  firstName   String
  lastName    String
  gradeLevel  String
  email       String
  phoneNumber String
  hasClass    Class?   @relation(fields: [classId], references: [id])
  classId     Int?
}

model Class {
  id        Int        @id @default(autoincrement())
  subject   String
  grade     String
}
